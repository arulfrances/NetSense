        <Image x:Name="ColorImage" Source="{Binding Manager.ColorBitmapSource, Mode=OneWay}" Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
    </Grid>



</Window>
